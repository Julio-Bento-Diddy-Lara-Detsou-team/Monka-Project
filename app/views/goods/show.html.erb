<!--Breadcrumb--->
<div class="container-fluid  page__heading-container">
  <div class="page__heading">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
        <li class="breadcrumb-item" aria-current="page"><%= link_to "Mes produits et services", goods_path, class: "active"%></li>
      </ol>
    </nav>
    <h1 class="mb-2 mt-3">Mon produit / service</h1>
  </div>
</div>
<!--Breadcrumb--->

<div class="container-small page__container mt-5">
  <div class="card card-form my-5">
    <div class="row no-gutters">
      <!-- Display user's logo -->
      <div class="col card-form__body card-body my-4">
        <div class="row justify-content-center">
          <div class="text-center">
            <p class="text-left"><span class="text-muted">Titre : </span><%= @good.title %></p>
            <p class="text-left"><span class="text-muted">Description : </span><%= @good.description %></p>
            <p class="text-left"><span class="text-muted">Prix : </span><%= number_to_currency(@good.price, :locale => :fr) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mb-5 mt-3">
    <div class="row justify-content-center text-center">
      <div class="col"><%= link_to "Editer", edit_good_path(@good), class: "btn btn-primary text-nowrap my-2" %></div>
      <div class="col"><%= link_to "Supprimer", good_path(@good.id), method: :delete, class: "btn btn-outline-danger my-2" %></div>
    </div>
  </div>
</div>
