<div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">

    <div class="flex">
      <!-- Breadcrumb-->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><%= link_to root_path do %><i class="material-icons icon-20pt">home</i><% end %></li>
          <li class="breadcrumb-item active" aria-current="page">Liste de mes produits & services</li>
        </ol>
      </nav>
      <!-- Page Title -->
      <h1 class="mt-3">Liste de mes produits & services</h1>
    </div>
    <!-- Button add Customer-->
    <%= link_to "Nouveau produit/service", new_good_path, class: "btn btn-primary ml-3" %>
  </div>
</div>

<div class="container-fluid page__container">

  <div class="col-lg-12 card-form__body">
    <div class="table-responsive border-bottom" data-toggle="lists" data-lists-values='["js-lists-values-employee-name"]'>
      <table class="table mb-0 thead-border-top-0 mb-5">
        <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th class="text-center">Quantity</th>
          <th class="text-center">Price</th>
          <th class="text-center">Afficher</th>
          <th class="text-center">Editer</th>
          <th class="text-center">Supprimer</th>
        </tr>
        </thead>
        <tbody class="list">
        <% @goods.each do |good| %>
          <tr id="<%= good.id %>">
            <td><%= good.title %></td>
            <td><%= good.description %></td>
            <td class="text-center"><%= good.quantity %></td>
            <td class="text-center"><%= number_to_currency(good.price, :locale => :fr) %></td>
            <td class="text-center"><%= link_to good, class: "btn btn-primary" do %><i class="fa fa-eye"></i><% end %></td>
            <td class="text-center"><%= link_to edit_good_path(good), class: "btn btn-info" do %>Editer<% end %></td>
            <td class="text-center"><%= link_to good, method: :delete, class:"btn btn-danger", data: {confirm: 'Are you sure?'}, remote: true do %>Supprimer<% end %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
