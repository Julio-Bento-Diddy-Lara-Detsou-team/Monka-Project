              date: 'Nov 1, 2018',
              title: 'Add Trello App Page',
              comments: 28,
              assigned: 'Laza Bogdan',
              avatarCount: 1
            }] %>

            <% tasks.each do |task| %>
              <%= render 'trelloTask',
                badgeLabel: task[:badgeLabel], 
                badgeClass: task[:badgeClass],
                date: task[:date],
                title: task[:title],
                comments: task[:comments],
                assigned: task[:assigned],
                avatarGroup: task[:avatarGroup],
                avatarCount: task[:avatarCount] %>
            <% end %>

          </div>
          <a href="#" class="btn btn-light btn-block mt-2">+ Add Card</a>
