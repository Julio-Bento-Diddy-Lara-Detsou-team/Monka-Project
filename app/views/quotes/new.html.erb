<p>This is the new quote page.</p>

<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="form-group">
    <%= text_field_tag 'customer_id', @quote.customer_id, class: 'form-control', placeholder: 'Customer' %>
  </div>

  <div class="form-group">
    <%= text_field_tag 'quote_number', @quote.quote_number, class: 'form-control', placeholder: 'Number' %>
  </div>

  <div class="form-group">
    <%= text_field_tag 'amount', @quote.amount, class: 'form-control', placeholder: '00.00€' %>
  </div>

  <div class="form-group">
    <%= text_field_tag 'discount', @quote.discount, class: 'form-control', placeholder: '00%' %>
  </div>

      <%= submit_tag "Créer", class: "btn btn-success my-3" %>
<% end %>