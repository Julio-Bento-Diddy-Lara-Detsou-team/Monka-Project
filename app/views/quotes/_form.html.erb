<%= form_with(model: quote, local: true) do |form| %>

  <!-- Display errors-->
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "erreurs") %> empêchent ce produit/service d'être créé :</h2>
      <ul>
        <% quote.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group btn-group-lg mb-4">
    <%= form.label :is_invoice, "Type de document :" %><br/>

    <div class="form-check form-check-inline">
      <%= form.radio_button :is_invoice, false, checked: true, class: "form-check-input" %>
      <%= form.label :is_invoice, "Devis", value: false, class: "form-check-label" %>
    </div>

    <div class="form-check form-check-inline">
      <%= form.radio_button :is_invoice, true, class: "form-check-input" %>
      <%= form.label :is_invoice, "Facture", value: true, class: "form-check-label" %>
    </div>
  </div>

  <div class="card card-form__body card-body">
    <div class="d-flex justify-content-center flex-column text-center my-5 navbar-light">
      <div class="navbar-brand d-flex flex-column m-0" style="min-width: 0">
        <% if current_user.logo.attached? %>
          <%= image_tag current_user.logo, alt: 'logo', width: "100" %>
        <%end %>
      </div>
      <div class="h2 mt-3">
        <strong class="text-body"><% if @quote.is_invoice %>Facture<% else %>Devis<% end %></strong>
      </div>
    </div>

    <%#= quote.customer.id if quote.customer  %>
    <div class="row">
      <div class="field col-lg-6">
        <% current_customer = [] << quote.customer.id if quote.customer %>

        <%= form.label :customer_id, "À destination de :" %><br/>
        <%= form.select :customer_id,
                        options_for_select(
                            current_user.customers.order(:last_name).collect{ |u| [u.fullname, u.id] },
                            current_customer
                        ),
                        class: "form-control" %>
      </div>

      <div class="col-lg-6 text-right">
        <%= form.label :user_id, "De la part de :" %><br/>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <p class="mb-4">
          <strong class="text-body"><%= current_user.first_name %> <%= current_user.last_name %></strong><br>
          <%= current_user.company_name %><br>
          <%= current_user.address %><br>
          <%= current_user.zip_code %> <%= current_user.country %><br>
        </p>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-lg">
        <fieldset disabled>
          <label for="quote_number">Numéro de devis :</label>
          <input type="text" class="form-control" id="quote_number" placeholder="INITIALES-<%= DateTime.now.strftime("%d%m%Y") %>-01">
        </fieldset>
      </div>
      <div class="col-lg text-right">
        <fieldset disabled>
          <label for="date">Date d'échéance :</label>
          <input type="text" class="form-control text-right" id="date" placeholder="<%= 3.days.from_now.strftime("%d/%m/%Y") %>">
        </fieldset>
      </div>
    </div>
    <hr/>

    <div class="form-group">
      <%= form.label :good, "Produits ou services :" %><br/>
      <%= form.select :good,
                      options_for_select(
                          current_user.goods.order(:title).collect{ |u| ["#{u.title} #{u.price}€", u.id] },
                          quote.goods.map {|good| good.id}
                      ),
                      { :prompt => "Sélectionner un produit ou un service"}, { :multiple => true, :size => 5, class: "form-control d-flex flex-wrap"} %>
    </div>

    <%= form.hidden_field :amount, value: 0 %>

    <hr/>
    <fieldset disabled>
      <label for="CGV">Termes et conditions :</label>
      <input type="text" class="form-control" id="CGV" placeholder="Conditions générales de vente n°1">
    </fieldset>

    <div class="row justify-content-center">
      <%= form.submit "Valider", class: "btn btn-primary btn-lg mt-4 mb-5" %>
    </div>
  </div>

  <!-- CODE SMELL :
  This JS code below should be in the assets but this is currently making Heroku deployment crash and
  I don't have time to fix it properly right now. Sorry to the person who will have to fix this in the future...
  -->
  <%= render "javascript" %>
<% end %>

<div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">
    <div class="flex">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="<%= root_path %>">Accueil</a></li>
          <li class="breadcrumb-item active" aria-current="page">Création de devis/facture</li>
        </ol>
      </nav>
      <h1 class="mt-3">Création de devis/facture</h1>
    </div>
  </div>
</div>

<div class="container-small page__container">
  <div class="btn-group-lg btn-group-toggle mb-3 ml-4" data-toggle="buttons">
    <label class="btn btn-primary btn-lg form-check-label active">
      <input class="form-check-input" type="radio" name="options" id="quote" autocomplete="off" value="" checked>
      Devis
    </label>
    <label class="btn btn-primary btn-lg form-check-label">
      <input class="form-check-input" type="radio" name="options" id="invoice" autocomplete="off">
      Facture
    </label>
  </div>

  <div class="card card-form__body card-body">
    <div class="d-flex justify-content-center flex-column text-center my-5 navbar-light">
      <div class="navbar-brand d-flex flex-column m-0" style="min-width: 0">
        <img class="navbar-brand-icon mb-2" src="<%= image_path('calculate_vert.png')%>" width="25" alt="Logo de la compagnie">
        <span><% if @quote.is_invoice %>Facture<% else %>Devis<% end %></span>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 form-group">
        <label for="customer_select">À destination de :</label>
        <div class="row align-items-center">
          <div class="col-lg-10 mb-3 mb-lg-0">
            <select
              id="customer_select"
              data-toggle="select"
              class="form-control form-control-lg">
              <option value= "" disabled selected>Choisir un client</option>
              <% current_user.customers.each do |customer| %>
                <option value= "<% customer.id %>"><%= customer.first_name %> <%= customer.last_name %></option>
              <% end %>
            </select>
          </div>
          <div class="col-lg-1">
            <button type="button" class="btn btn-primary">
              Créer
            </button>
          </div>
        </div>
      </div>
      <div class="col-lg-6 text-right">
        <label>De la part de :</label>
        <p class="mb-4">
          <strong class="text-body"><%= current_user.first_name %> <%= current_user.last_name %></strong><br>
          <%= current_user.company_name %><br>
          <%= current_user.address %><br>
          <%= current_user.zip_code %> <%= current_user.country %><br>
        </p>
      </div>
    </div>
    <div class="row mb-5">
      <div class="col-lg">
        <fieldset disabled>
          <label for="quote_number">Numéro de devis :</label>
          <input type="text" class="form-control" id="quote_number" value="INITIALES-<%= DateTime.now.strftime("%d%m%Y") %>-01">
        </fieldset>
      </div>
      <div class="col-lg text-right">
        <fieldset disabled>
          <label for="date">Date d'échéance :</label>
          <input type="text" class="form-control text-right" id="date" value="<%= 3.days.from_now.strftime("%d/%m/%Y") %>">
        </fieldset>
      </div>
    </div>
    <hr/>
    <label for="goods_select">Liste des produits/services :</label>
    <div class="row align-items-center">
      <div class="col-lg-10 mb-3 mb-lg-0">
        <select
          id="goods_select"
          data-toggle="select"
          class="form-control form-control-lg">
          <option value= "" disabled selected>Choisir un produit/service</option>
          <% current_user.goods.each do |good| %>
            <option value= "<% good.id %>"><%= good.title %></option>
          <% end %>
        </select>
      </div>
      <div class="col-lg-1">
        <button type="button" class="btn btn-primary">
          Créer
        </button>
      </div>
    </div>
    <hr/>
    <div class="bg-dark rounded">
      <h3 class="text-white text-right mr-4 py-3">Total : 9999€</h3>
    </div>
    <hr/>
    <fieldset disabled>
      <label for="CGV">Termes et conditions :</label>
      <input type="text" class="form-control" id="CGV" value="Conditions générales de vente n°1">
    </fieldset>
    <button type="submit" class="btn btn-primary mt-4" style="float: right;">Valider</button>
  </div>
</div>

