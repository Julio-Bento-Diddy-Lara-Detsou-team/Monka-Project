<div class="container">
  <div class="container-fluid page__heading-container">
    <div class="page__heading d-flex align-items-center">
      <div class="flex">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="<%= root_path %>">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mes devis et factures</li>
          </ol>
        </nav>
        <h1 class="mt-3">Mes devis et factures</h1>
      </div>
      <a href="<%= new_quote_path %>" class="btn btn-primary ml-3">Nouveau devis</a>
    </div>
  </div>

  <div class="container-fluid page__container">
    <div class="card card-form d-flex flex-column flex-sm-row">
      <div class="card-form__body card-body-form-group flex">
        <div class="row">
          <div class="col-sm-auto">
            <div class="form-group">
              <label for="filter_name">Recherche</label>
              <input id="filter_name" type="text" class="form-control" placeholder="Entrez les mots-clefs">
            </div>
          </div>
          <div class="col-sm-auto">
            <div class="form-group">
              <label for="filter_buckets">Entreprise</label><br>
              <select id="filter_buckets" class="custom-select" style="width: 150px;">
                <option value="all">Tous</option>
                <option value="1">Little Group</option>
                <option value="2">Blanda Inc</option>
                <option value="3">Wolff and Sons</option>
              </select>
            </div>
          </div>
          <div class="col-sm-auto">
            <div class="form-group">
              <label for="filter_assigned">Clients</label><br>
              <select id="filter_assigned" class="custom-select" style="width: 150px;">
                <option value="all">Tous</option>
                <option value="1">Adrien D.</option>
                <option value="2">Thomas S.</option>
                <option value="3">Bertrand L.</option>
              </select>
            </div>
          </div>
          <div class="col-sm-auto">
            <div class="form-group" style="width: 200px;">
              <label for="filter_date">Date</label>
              <input id="filter_date" type="text" class="form-control" placeholder="Select date ..." value="13/03/2018 to 20/03/2018" data-toggle="flatpickr" data-flatpickr-mode="range" data-flatpickr-alt-format="d/m/Y" data-flatpickr-date-format="d/m/Y">
            </div>
          </div>
        </div>
      </div>
      <button class="btn bg-white border-left border-top border-top-sm-0 rounded-top-0 rounded-top-sm rounded-left-sm-0"><i class="material-icons text-primary">refresh</i></button>
    </div>



    <h3 class="text-dark-gray d-flex align-items-center mt-3 ml-4">
      <strong>Mes devis</strong>
    </h3>

    <% @quotes.each do |quote| %>
      <div class="row projects-item mb-1">
        <div class="col-sm">
          <div class="card m-0">
            <div class="px-4 py-3">
              <div class="row align-items-center">
                <div class="col" style="min-width: 300px">
                  <div class="d-flex align-items-center">
                    <strong class="text-15pt mr-2"><%= quote.customer.company_name %></strong>
                  </div>
                </div>
                <div class="col">
                  <a href="#" class="text-body"><%= quote.quote_number %></a>
                </div>
                <div class="col-auto d-flex align-items-center" style="min-width: 140px;">
                  <a href="<%= quote_path(quote.id) %>"<i class="fa fa-eye" aria-hidden="true"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <h3 class="text-dark-gray d-flex align-items-center mt-3 ml-4">
      <strong>Mes factures</strong>
    </h3>

    <% @invoices.each do |invoice| %>

      <div class="row align-items-center projects-item mb-1">
        <div class="col-sm">
          <div class="card m-0">
            <div class="px-4 py-3">
              <div class="row align-items-center">
                <div class="col" style="min-width: 300px">
                  <div class="d-flex align-items-center">
                    <strong class="text-15pt mr-2"><%= invoice.customer.company_name %></strong>
                  </div>
                </div>
                <div class="col">
                  <a href="#" class="text-body"><%= invoice.invoice_number %></a>
                </div>
                <div class="col-auto d-flex align-items-center" style="min-width: 140px;">
                  <a href="<%= quote_path(invoice.id) %>"<i class="fa fa-eye" aria-hidden="true"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render '/flowdash/pagination', pages: 4, first: true, last: true, align:'center' %>
    </div>
  </div>
</div>