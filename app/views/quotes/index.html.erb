<div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">
    <div class="flex">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><%= link_to root_path do %><i class="material-icons icon-20pt">home</i><% end %></li>
          <li class="breadcrumb-item active" aria-current="page">Mes devis et factures</li>
        </ol>
      </nav>
      <h1 class="mt-3">Mes devis et factures</h1>
    </div>
    <%= link_to "Nouveau devis", new_quote_path, class: "btn btn-primary ml-3" %>
  </div>
</div>

<div class="container-fluid page__container">

  <h3 class="text-dark-gray d-flex align-items-center mt-3 ml-4">
    <strong>Mes devis</strong>
  </h3>

  <% @quotes.order(quote_sending_date: :asc).each do |quote| %>
    <div class="row projects-item mb-1">
      <div class="col-sm">
        <div class="card m-0">
          <div class="px-4 py-3">
            <div class="row align-items-center">
              <div class="col" style="min-width: 300px">
                <div class="d-flex align-items-center">
                  <strong class="text-15pt mr-2"><%= quote.customer.company_name %></strong>
                </div>
              </div>
              <div class="col">
                <%= link_to quote.quote_number, quote_path(quote.id), class: "text-body" %>
              </div>
              <div class="col-auto d-flex align-items-center" style="min-width: 140px;">
                <%= link_to quote_path(quote.id), class: "btn btn-secondary mr-2" do %>
                  <i class="fa fa-eye" aria-hidden="true"></i>
                <% end %>
                <%= link_to quote_path(quote.id), method: :delete, class: "btn btn-danger text-white" do %>
                  <i class="material-icons">close</i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <h3 class="text-dark-gray d-flex align-items-center mt-3 ml-4">
    <strong>Mes factures</strong>
  </h3>

  <% @invoices.order(invoice_sending_date: :asc).each do |invoice| %>

    <div class="row align-items-center projects-item mb-1">
      <div class="col-sm">
        <div class="card m-0">
          <div class="px-4 py-3">
            <div class="row align-items-center">
              <div class="col" style="min-width: 300px">
                <div class="d-flex align-items-center">
                  <strong class="text-15pt mr-2"><%= invoice.customer.company_name %></strong>
                </div>
              </div>
              <div class="col">
                <%= link_to invoice.invoice_number, quote_path(invoice.id), class: "text-body" %>
              </div>
              <div class="col-auto d-flex align-items-center" style="min-width: 140px;">
                <%= link_to quote_path(invoice.id), class: "btn btn-secondary mr-2" do %>
                  <i class="fa fa-eye" aria-hidden="true"></i>
                <% end %>
                <%= link_to quote_path(invoice.id), method: :delete, class: "btn btn-danger text-white" do %>
                  <i class="material-icons">close</i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
