<div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">
    <div class="flex">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="<%= root_path %>">Accueil</a></li>
          <li class="breadcrumb-item"><a href="<%= customers_path %>" class="active">Liste de mes clients</a></li>
        </ol>
      </nav>
      <h1 class="mt-3">Mon <span class="greentitle">client</span></h1>
    </div>
  </div>
</div>

<!--Breadcrumb--->
<div class="container-fluid page__container">
  <div class="card card-form">
    <div class="row no-gutters">

      <div class="col-lg-4 card-body mt-5 text-center">
        <p class="greentitle">Mes informations</p>
      </div>
      <!--section-->
      <div class="col-lg-8 card-form__body card-body my-5">
        <div class="row my-1">
          <p class="text-muted">Prénom : </p>
          <p class="ml-3 text-right"><%= @customer.first_name %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Nom : </p>
          <p class="ml-3 text-right"><%= @customer.last_name %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Statut : </p>
          <p class="ml-3 text-right"><% if @customer.is_professional %>Professionel <% else %>Particulier<%end %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Nom de l'entreprise : </p>
          <p class="ml-3 text-right"><%= @customer.company_name %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">N°SIRET : </p>
          <p class="ml-3 text-right"><%= @customer.company_id %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Adresse de la société : </p>
          <p class="ml-3 text-right"><%= @customer.address %> <%=@customer.zip_code %> <%=@customer.country %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Numéro de téléphone : </p>
          <p class="ml-3 text-right"><%= @customer.phone_number %></p>
        </div>
        <div class="row my-1">
          <p class="text-muted">Email : </p>
          <p class="ml-3 text-right mb-3"><%= @customer.email %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="text-center mb-3">
  <%= link_to "Editer", edit_customer_path(@customer), class: "btn btn-jumbo2 mr-5 p-3 my-5" %>
  <%= link_to 'Supprimer', customer_path(@customer.id), method: "delete", class:"btn btn-jumbo p-3 my-5" %>
</div>

