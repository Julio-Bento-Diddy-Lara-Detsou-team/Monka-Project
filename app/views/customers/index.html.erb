<div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">

    <div class="flex">
      <!-- Breadcrumb-->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
          <li class="breadcrumb-item" aria-current="page"><%= link_to "Mes clients", customers_path, class: "active"%></li>
        </ol>
      </nav>
      <!-- Page Title -->
      <h1 class="mt-3">Mes clients</h1>
    </div>
    <!-- Button add Customer-->
    <%= link_to "Nouveau client", new_customer_path, class: "btn btn-primary ml-3" %>
  </div>
</div>

<div class="container-fluid page__container">

  <div class="col-lg-12 card-form__body">
    <div class="table-responsive border-bottom" data-toggle="lists" data-lists-values='["js-lists-values-employee-name"]'>
      <table class="table mb-0 thead-border-top-0 mb-5">
        <thead>
        <tr>
          <th>Nom complet</th>
          <th>Entreprise</th>
          <th>Email</th>
          <th class="text-center">Editer</th>
          <th class="text-center">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr id="<%= customer.id %>">
            <td><%= link_to customer_path(customer.id) do %><%= customer.last_name.upcase %> <%= customer.first_name %><% end %></td>
            <td><%= customer.company_name %></td>
            <td><%= customer.email %></td>
            <td class="text-center"><%= link_to "Editer", edit_customer_path(customer.id), class: "btn btn-primary btn-sm" %></td>
            <td class="text-center"><%= link_to "Supprimer", customer_path(customer.id), method: :delete, class:"btn btn-danger text-white btn-sm", data: {confirm: 'Supprimer cet élément ?'}, remote: true %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
