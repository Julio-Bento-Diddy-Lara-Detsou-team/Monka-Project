<!-- Customer Form Fields -->
<%= form_with(model: @customer, local: true, method: :put) do |field| %>
<div class="form-group">
  <div class="form-row">
    <div class="col">
      <%= label_tag 'Prénom :' %>
      <%= field.text_field :title, class:"form-control", placeholder:"Prénom" %>
    </div>
    <div class="col">
      <%= label_tag 'Nom :' %>
      <%= field.text_field :last_name, class:"form-control", placeholder:"Nom" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="form-row">
    <div class="col-7">
      <%= label_tag 'Société :' %>
      <%= field.text_field :company_name, class:"form-control", placeholder:"Société" %>
    </div>
    <div class="col-5">
      <%= label_tag 'Siret ou Siren :' %>
      <%= field.text_field :company_id, class:"form-control", placeholder:"Siret ou Siren" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="form-row">
    <div class="col-8">
      <%= label_tag 'Email :' %>
      <%= field.email_field :email, class:"form-control", placeholder:"Email" %>
    </div>
    <div class="col-4">
      <%= label_tag 'Téléphone :' %>
      <%= field.text_field :phone_number, class:"form-control", placeholder:"Téléphone" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="form-row">
    <div class="col-6">
      <%= label_tag 'Adresse :' %>
      <%#= text_field_tag 'title', customer.address, {class: 'form-control', placeholder: "Adresse"} %>
      <%= field.email_field :address, class:"form-control", placeholder:"Adresse" %>
    </div>
    <div class="col-3">
      <%= label_tag 'Code postal :' %>
      <%#= text_field_tag 'title', customer.zip_code, {class: 'form-control', placeholder: "Code postal"} %>
      <%= field.text_field :zip_code, class:"form-control", placeholder:"Code postal" %>
    </div>
    <div class="col-3">
      <fieldset disabled>
        <%= label_tag 'Pays :' %>
        <%#= text_field_tag 'title', customer.country, {class: 'form-control', placeholder: "pays", value: 'FRANCE'} %>
        <%= field.text_field :country, class: 'form-control', placeholder: "pays", as: :select, collection: country_dropdown %>
      </fieldset>
    </div>
  </div>

  <div class="form-group my-5">
    <div class="row justify-content-center">
      <%= submit_tag "Valider", {class: 'btn btn-primary'} %>
    </div>
  </div>
</div>
<% end %>
