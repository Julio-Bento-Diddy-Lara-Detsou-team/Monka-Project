<%= form_tag quote_charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>

  <!--Parameters payment card-->

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-description="Montant de la facture"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-amount="<%= @quote.amount * 100 %>"
          data-locale="fr"
          data-currency="eur"
          data-country="FR"
          data-label="Cliquer ici pour payer">
  </script>
<% end %>
